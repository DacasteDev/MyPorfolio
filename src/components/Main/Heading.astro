            </a>
        </div>
    </div>
    <div class="photo">
        <img src={foto.src} alt="David Castellanos">
    </div>
</section>

<style>
    .heading_container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 4rem;
        margin: 0 auto;
        padding: 3rem 0;
        overflow: hidden;

        .text_container{
            .title{

                .one_spam {
                    color: var(--primary-color);
                }
            
                .second_spam {
                    color: var(--secondary-color);
                }
            }
    
            .text{
                max-width: 450px; 
            }

            .social {
                display: flex;
                flex-direction: row;
                justify-items: left;
                gap: 1rem;
                a {
                    color : var(--white-color);
                    text-decoration: none;
                    padding: .5rem 1rem;
                    border-radius: 1rem;
                    border: 1px solid var(--primary-color);
                    margin: 2rem 0;
                    font-size:.8rem;
                    display: flex;
                    align-items: center;
                    
                    img{
                        margin-right: .5rem;
                    }
                }
            }
        }

        
        .photo {
            width: 250px;
            height: 250px;
            overflow: hidden;

            img{
                width: 100%;	
                height: 100%;
                object-fit: contain;
            };
        }

    }

    @media screen and (max-width: 599px) {
        .heading_container {
            flex-direction: column;
            gap: 2rem;
        }
    }
    
</style>
